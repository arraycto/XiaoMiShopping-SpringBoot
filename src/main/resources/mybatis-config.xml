<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <properties resource="JDBC.properties"/>

    <environments default="mysql">
        <environment id="mysql">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${driver}"/>
                <property name="url" value="${url}"/>
                <property name="username" value="${username}"/>
                <property name="password" value="${password}"/>
            </dataSource>
        </environment>
    </environments>

    <!--将写好的userMapper.xml映射文件注册到全局配置文件mybatis-config.xml中-->
    <mappers>
        <mapper class="com.zty.blog.server.Dao.RegLogUser"/>
        <mapper class="com.zty.blog.server.Dao.Goods"/>
        <mapper class="com.zty.blog.server.Dao.GoodCart"/>
        <mapper class="com.zty.blog.server.Dao.Category"/>
        <mapper class="com.zty.blog.server.Dao.Product"/>
        <mapper class="com.zty.blog.server.Dao.ProductHead"/>
        <mapper class="com.zty.blog.server.Dao.ProductFoot"/>
        <mapper class="com.zty.blog.server.Dao.Address"/>
    </mappers>
</configuration>